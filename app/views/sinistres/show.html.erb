<div class="container">
  <div class="row">
    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path @sinistre.image %>');">
      <div class="banner-content">
        <h1><%= @sinistre.name %></h1>
        <p><%= @sinistre.place %></p>
      </div>
    </div>
    <br>
    <a class="btn btn-primary"<%= link_to "Edit this sinistre", edit_sinistre_path(@sinistre) %> </a>
    <br>
    <br>
    <a class="btn btn-primary"<%= link_to "Delete this sinistre", root_path(@sinistre),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
    </a>
  </div>
</div>
